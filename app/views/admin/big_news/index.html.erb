<div class="container">
  <h1>Список новостей</h1>

  <div class="new-news-button-container">
    <%= link_to 'Добавить новость', new_admin_big_news_path, class: 'button' %>
  </div>

  <table>
    <thead>
    <tr>
      <th>Название</th>
      <th>Содержание</th>
      <th>Новость публикуется</th>
      <th id="date-header" class="sortable">Дата создания</th>
      <th>Действия</th>
    </tr>
    </thead>
    <tbody id="news-table-body">
    <% @big_news.each do |news_item| %>
      <tr>
        <td><%= news_item.title%></td>
        <td><%= truncate(news_item.content, length: 100) %></td>
        <td><%= news_item.visible ? 'Да' : 'Нет' %></td>
        <td><%= news_item.created_at.strftime("%d.%m.%Y") %></td>
        <td class="action-buttons">
          <%= link_to 'Просмотреть', admin_big_news_path(news_item), class: 'button action-button' %>
          <%= link_to 'Изменить', edit_admin_big_news_path(news_item), class: 'button action-button' %>
          <%= button_to 'Удалить', admin_big_news_path(news_item), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'button action-button' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
